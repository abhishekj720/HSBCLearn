<!DOCTYPE html>
<html>
<head>
<meta charset="ISO-8859-1">
<title>Insert title here</title>
<style>
#div1 {
	width: 200px;
	height: 200px;
	border: 1px solid red;
}
#div1 div{
  text-align: left;
  padding: 5px;
  
}

#div1 div:hover{
 background-color: cyan;
  
}
.cls1{
   color:gray;
   
}
</style>
<script>
	var arr = [ "chennai", "calicut", "chandigarh", "badarpur", "bangalore",
			"bhopal", "ambala", "allahabad", "amethi", "ahmedabad", "ajmer" , "badlapur"];
	
	
    function display(val){
    	
    	var len = val.length;
    	var html="";
    	if(len>0){
    		for(idx = 0; idx<arr.length; ++idx){
        		if(arr[idx].substring(0,len)==val){
        		<!--	html += '<div id="' + idx + '">' + arr[idx] + '</div>'; -->
        		html += '<div id="' + idx + '" onclick="bind(this.innerHTML)">' + arr[idx] + '</div>';
        		}
        	}
    	}
    	
    	
    	document.getElementById("div1").innerHTML = html;
    }
    
    function bind(val){
    	document.getElementById("txt1").value = val;
    }
	
    
</script>
</head>
<body>
	<h1>Suggestion Demo</h1>
	<hr />
	<div align="center">
		<input type="text" id="txt1" onkeyup="display(this.value)" />
		<div id="div1"></div>
	</div>
</body>
</html>


