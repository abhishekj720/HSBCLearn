<!DOCTYPE html>
<html>
<head>
<meta charset="ISO-8859-1">
<title>Insert title here</title>
<script>
  var json = {emps: {1001:{"eid":1001, "ename":"akbar", "sal":23000}},
	           {1002:{"eid":1002, "ename":"rama", "sal":13000}},
	           {1003:{"eid":1003, "ename":"suresh", "sal":33000}},
	           {1004:{"eid":1004, "ename":"joseph", "sal":53000}},
	           {1005:{"eid":1005, "ename":"varun", "sal":43000}}
  };
  
  function display(){
	  var eid = document.getElementById("txtid").value;
	  if(isNaN(eid)){
		  alert("Eid is not a number");
		  
	  } else{
		  if(json.emps[eid]!= undefined){
			  document.getElementById("tbl1").style.display="block";
			  
			  document.getElementById("teid").innerHTML = json.emps[eid].eid;
			  document.getElementById("tname").innerHTML = json.emps[eid].ename;
			  document.getElementById("tsal").innerHTML = json.emps[eid].sal;
		  } else{
			  document.getElementById("tbl1").style.display="none";
			  alert("No row found");
		  }
		  
	  }
	 
  }
</script>
</head>
<body>
<div align="center">
   Eid: <input type="text" id="txtid"/>
   <input type="button" value="search" onclick="display()"/>
   <table cellpadding="10" bgcolor="cyan" style="margin:0px auto; display:none">
	    <tr>
			<td>EID</td>
			<td id="teid"></td>
		</tr>
		<tr>
			<td>Name</td>
			<td id="tname"></td>
		</tr>
		<tr>
			<td>salary</td>
			<td id="tsal"></td>
		</tr>
		
	</table>
   
</div>
