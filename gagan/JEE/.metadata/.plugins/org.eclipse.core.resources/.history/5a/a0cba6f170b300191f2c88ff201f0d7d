  function search(){
	  var id = document.getElementById("txtid").value;
	  if(isNaN(id)){
		  alert("Eid is not a number");
		  
	  } else{
		  doAjax(id);
	  }
  }
  
  function doAjax(id){
	  var ajax = new XMLHttpRequest();
	  var url = "http://localhost:8080/AjaxDemo/products.jason";
	  ajax.open("GET", url,true);
	    
  }
  
