<script>
  function addRow(){
	  var name = document.getElementById("txtname").value;
	  var dept = document.getElementById("txtdept").value;
	  var elem = document.createElement("tr");
	  var data = "<td>" + name + "</td><td>" + dept + "</td>";
	  data += "<td><input type='button' value = 'remove' onclick = 'removeRow(this)'/></td>";
	  elem.innerHTML = data;
	  document.getElementById("tbl1").appendChild(elem);
  }
  
  function prependRow(){
	  var name = document.getElementById("txtname").value;
	  var dept = document.getElementById("txtdept").value;
	  var elem = document.createElement("tr");
	  var data = "<td>" + name + "</td><td>" + dept + "</td>";
	  data += "<td><input type='button' value = 'remove' onclick = 'removeRow(this)'/></td>";
	  elem.innerHTML = data;
	  document.getElementById("tbl1").prepend(elem);
	  
  }
  
  function removeRow(elem){
	  console.log(elem.parent)
  }
  

</script>

</head>
<body>
	<h1 style="text-align: center">Append Child</h1>
